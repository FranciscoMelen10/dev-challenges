---
import Layout from "../layouts/Layout.astro";

const projects = [
  {
    title: "Minimal Blog",
    link: "/MinimalBlog",
  },
  {
    title: "Business Blog",
    link: "/BusinessBlog",
  },
  {
    title: "Testimonial Page",
    link: "/TestimonialPage",
  },
  {
    title: "Contact Page",
    link: "/ContactPage",
  },
  {
    title: "Minimal Blog",
    link: "/MinimalBlog",
  },
];
---

<Layout title="Dev-Challeges FranciscoMelen10">
  <main>
    <header>
      <h1 class="dev">Dev Challeges</h1>
      <a
        href="https://github.com/FranciscoMelen10/dev-challenges"
        class="flex gap-3 cursor-pointer text-white font-semibold bg-gradient-to-r from-gray-800 to-black px-5 py-2 rounded-full border border-gray-600 hover:scale-105 duration-200 hover:text-gray-300 hover:border-gray-800 hover:from-black hover:to-gray-900"
      >
        <svg
          viewBox="0 0 24 24"
          height="24"
          width="24"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            fill="#FFFFFF"
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path></svg
        >
      </a>
    </header>
    <div class="cards">
      {
        projects.map((data) => {
          return (
            <a class="card" href={data.link}>
              <h1 class="tip">{data.title}</h1>
            </a>
          );
        })
      }
    </div>

    <footer>
      <h1 class="autor">@FranciscoMelen10</h1>
    </footer>
  </main>
</Layout>

<style>
  main {
    display: grid;
    grid-template-areas:
      "header"
      "main"
      "footer";
    grid-row: 1fr 1fr 1fr;
    height: 100vh;
    justify-items: center;
  }

  .dev {
    font-size: 30px;
    font-family: "Sora";
    font-weight: 900;
  }

  header {
    grid-area: header;
    width: 100%;
    height: 100px;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: space-around;
  }

  .cards {
    grid-area: main;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
    width: fit-content;
    margin-bottom: 50px;
  }

  .cards .card {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    text-align: center;
    height: 50px;
    width: 200px;
    padding: 0 20px;
    border-radius: 10px;
    color: white;
    cursor: pointer;
    background-color: #1484b8;
    transition: 400ms;
    text-decoration: none;
    font-family: "Sora";
  }

  .cards .card p.tip {
    font-size: 20px;
    font-weight: 700;
    font-size: "Sora";
  }

  .cards .card:hover {
    transform: scale(1.1, 1.1);
  }

  .cards:hover > .card:not(:hover) {
    filter: blur(10px);
    transform: scale(0.9, 0.9);
  }

  footer {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    grid-area: footer;
  }

  .autor {
    font-size: 15px;
    font-family: "Open Sans", sans-serif;
    font-weight: 900;
  }
</style>
