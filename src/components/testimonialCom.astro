const data = [
  {
    stars: 4,
    name: "Samantha Lee",
    desc: "The checklist ensures that the review process is thorough",
    logo: "/Testimonial Page/google-testimonial.png",
  },
  {
    stars: 5,
    name: "Rachel Patel",
    desc: "I highly recommend the Writecream Business Description",
